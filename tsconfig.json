{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": false,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["es2020"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
